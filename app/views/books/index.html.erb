<h1>Books</h1>
<p>
<span>Title</span>
 <span>Body</span>
 </p>

<% @books.each do |book| %>
  <span><%= book.title %></span>

  <span><%= book.body %></span>
    <span>
    <%= link_to "show", show_book_path(book.id) %>
  </span>
  <span>
    <%= link_to "edit", edit_book_path(book.id) %>
  </span>
  <span>
  <%= link_to "destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
  </span></span>
  </p>
<% end %>

